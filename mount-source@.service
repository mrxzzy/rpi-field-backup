[Unit]
Description=mount %i to /media/source
After=dev-MediaSource.device
BindsTo=dev-MediaSource.device
Requisite=dev-MediaSource.device

[Service]
Type=oneshot
StandardOutput=journal
RemainAfterExit=true
ExecStart=/usr/bin/echo mounting disk %i
ExecStart=/usr/bin/mount /dev/%i /media/source
ExecStop=/usr/bin/umount /media/source

[Install]
WantedBy=dev-MediaSource.device
